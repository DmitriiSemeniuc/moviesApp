<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorControlHighlight">@color/black10</item>
    </style>

    <style name="ThemeFullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/statusBarColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="TextBaseRegular">
        <item name="android:fontFamily">@font/harmonia_sans_std_regular</item>
    </style>

    <style name="TextBaseBold">
        <item name="android:fontFamily">@font/harmonia_sans_std_bold</item>
    </style>

    <style name="TextBaseLight">
        <item name="android:fontFamily">@font/harmonia_sans_light</item>
    </style>

    <style name="TextNormal" parent="TextBaseRegular">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextHeaderBold" parent="TextBaseBold">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SnackBar" />

    <style name="SnackBar.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:background">@drawable/snackbar_background</item>
        <item name="android:paddingStart">@dimen/margin_padding_size_small</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_small</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_tiny</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="SnackBar.Text" parent="TextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/snackBarMessageText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SnackBar.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_tiny</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_tiny</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/harmonia_sans_std_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/snackBarButtonText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/snackbar_action_button_background</item>
        <item name="android:foreground">@null</item>
    </style>
</resources>
